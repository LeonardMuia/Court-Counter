                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="8dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#1c1c53"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <!-- End of Score Figures -->

                <!-- Conversion Statement -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:text="Points Scored"
                    android:textAlignment="center"
                    android:textColor="#cf3442"
                    android:textSize="10sp" />
                <!-- End of Conversion Statement-->

            </LinearLayout>
            <!-- End of Team A Scores -->

        </LinearLayout>
        <!-- End of Team A Points -->

        <!-- Border Image View(The semicolons) -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/colon" />
        <!-- End of the Border Image View -->

        <!-- Team B Points -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <!-- Team B Scores -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Score Figures -->
                <TextView
                    android:id="@+id/two_points_team_B"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="8dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#1c1c53"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <!-- End of Score Figures -->

                <!-- Conversion Statement -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:text="Points Scored"
                    android:textAlignment="center"
                    android:textColor="#cf3442"
                    android:textSize="10sp" />
                <!-- End of Conversion Statement-->

            </LinearLayout>
            <!-- End of Team B Scores -->

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingRight="8dp">

                <!-- Button Increment-->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#bf031c"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:onClick="display5"/>
                <!-- End of Button Increment -->

            </LinearLayout>
            <!-- End of Button -->

        </LinearLayout>
        <!-- End of Team B Points -->
        <!-- End of Team B Points -->
    </LinearLayout>
    <!-- End of Section 6 Layout -->

    <!-- Section 7 Layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/gradient"
        android:paddingTop="5dp"
        android:text=":: Score from Free Throw ::"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="12sp" />
    <!-- End of Section 7 Layout -->

    <!-- Section 8 Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- Team A Points -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <!-- Button Increment-->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#bf031c"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:onClick="display3"/>
                <!-- End of Button Increment -->

            </LinearLayout>
            <!-- End of Button -->

            <!-- Team A Scores -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Score Figures -->
                <TextView
                    android:id="@+id/single_point_team_A"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="8dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#1c1c53"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <!-- End of Score Figures -->

                <!-- Conversion Statement -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:text="Points Scored"
                    android:textAlignment="center"
                    android:textColor="#cf3442"
                    android:textSize="10sp" />
                <!-- End of Conversion Statement-->

            </LinearLayout>
            <!-- End of Team A Scores -->

        </LinearLayout>
        <!-- End of Team A Points -->

        <!-- Border Image View(The semicolons) -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/colon" />
        <!-- End of the Border Image View -->

        <!-- Team B Points -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <!-- Team B Scores -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <!-- Score Figures -->
                <TextView
                    android:id="@+id/single_point_team_B"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="8dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#1c1c53"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <!-- End of Score Figures -->

                <!-- Conversion Statement -->
