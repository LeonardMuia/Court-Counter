                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:text="Points Scored"
                    android:textAlignment="center"
                    android:textColor="#cf3442"
                    android:textSize="10sp" />
                <!-- End of Conversion Statement-->

            </LinearLayout>
            <!-- End of Team B Scores -->

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingRight="8dp">

                <!-- Button Increment-->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#bf031c"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:onClick="display6"/>
                <!-- End of Button Increment -->

            </LinearLayout>
            <!-- End of Button -->

        </LinearLayout>
        <!-- End of Team B Points -->

    </LinearLayout>
    <!-- End of Section 8 Layout -->

    <!-- Section 9 Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="#1f2a40"
        android:orientation="vertical">

        <!-- Winner Statement -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="4sp"
            android:paddingLeft="16sp"
            android:paddingTop="4sp"
            android:textAlignment="center"
            android:text=":: Use the + Buttons to Assign Points. From yours truly, Leonard M ::"
            android:textColor="#fff"
            android:textSize="10sp" />
        <!-- End of Winner Statement -->

        <!-- Team A Final Scores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Score Team A Final -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#c40320">

                <!-- Team Logo -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/celtics_thumbnail" />
                <!-- Team Logo -->

                <!-- Team Logo -->
                <TextView
                    android:id="@+id/total_points_teamA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="36sp"
                    android:textStyle="bold" />
                <!-- Team Logo -->
            </LinearLayout>

            <!-- Final Score Team A Final -->

            <!-- Score Team B Final -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#001329">

                <!-- Team Logo -->
                <TextView
                    android:id="@+id/total_points_teamB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="36sp"
                    android:textStyle="bold" />
                <!-- Team Logo -->

                <!-- Team Logo -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/cleaveland_thumbnail" />
                <!-- Team Logo -->

            </LinearLayout>

            <!-- Final Score Team A Final -->

        </LinearLayout>
        <!-- End of Team A Final Scores -->

        <!-- Team B Final Scores -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Team  Total Points -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- End of Team B Total Points -->

            <!-- Team B Logo -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <!-- End of Team B Logo -->

        </LinearLayout>
        <!-- End of Team B Final Scores -->

    </LinearLayout>
    <!-- End of Section 9 -->

</LinearLayout>